---
export interface Props { text?: string; href?: string; }
const { text = 'See our Top Longevity Picks', href = '/vitaledge-site/top-products/' } = Astro.props;
---
<div id="sticky-cta" class="fixed bottom-4 left-1/2 -translate-x-1/2 z-50">
  <a href={href}
     class="px-5 py-3 rounded-full shadow-lg bg-gradient-to-r from-indigo-600 to-cyan-500 text-white font-semibold hover:scale-[1.02] transition">
    {text}
  </a>
</div>
<script>
  const el = document.getElementById('sticky-cta');
  setTimeout(() => el?.classList.add('opacity-0','pointer-events-none','transition','duration-500'), 7000);
</script>
