---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | VitalEdge` : "VitalEdge"}</title>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const btn = document.getElementById('menu-button');
        const menu = document.getElementById('mobile-menu');
        btn.addEventListener('click', () => {
          menu.classList.toggle('hidden');
        });
      });
    </script>
  </head>
  <body class="font-sans bg-gray-50 text-gray-800 antialiased">
    <header class="bg-white shadow sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center space-x-2">
          <img src="/images/vitaledge-navbar.png" alt="VitalEdge Logo" class="h-14 w-auto max-w-[500px]" />
          <span class="text-xl font-bold text-blue-700 hidden sm:inline">VitalEdge</span>
        </a>

        <!-- Mobile button -->
        <button id="menu-button" class="md:hidden text-blue-600 focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Desktop Menu -->
        <ul class="hidden md:flex space-x-6 text-sm md:text-base font-medium">
          <li><a href="/" class="hover:text-blue-600 transition">Home</a></li>
          <li><a href="/top-products" class="hover:text-blue-600 transition">Top Products</a></li>
          <li><a href="/blog" class="hover:text-blue-600 transition">Blog</a></li>
          <li><a href="/about" class="hover:text-blue-600 transition">About</a></li>
          <li><a href="/contact" class="hover:text-blue-600 transition">Contact</a></li>
        </ul>
      </nav>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
        <ul class="space-y-2 text-sm font-medium">
          <li><a href="/" class="block hover:text-blue-600 transition">Home</a></li>
          <li><a href="/top-products" class="block hover:text-blue-600 transition">Top Products</a></li>
          <li><a href="/blog" class="block hover:text-blue-600 transition">Blog</a></li>
          <li><a href="/about" class="block hover:text-blue-600 transition">About</a></li>
          <li><a href="/contact" class="block hover:text-blue-600 transition">Contact</a></li>
        </ul>
      </div>
    </header>

    <main class="min-h-[75vh] px-4 py-8">
      <slot />
    </main>

    <footer class="py-6 bg-white text-gray-500 text-sm">
      <div class="max-w-6xl mx-auto px-4 flex flex-col items-center space-y-4">
      
        <div class="flex space-x-4">
          <a href="#" aria-label="Instagram" class="hover:text-blue-600">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
